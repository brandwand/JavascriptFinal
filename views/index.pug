doctype html
html
    head
        title= title
        link(href='/css/style.css', rel='stylesheet')

    body content
        h3 List of People

        table(class='gridtable')
            tr
                th Id
                th Name
                th Age
                th Email
                th Username
                th Password
                th User-Level
            each item in people
                tr
                    td
                        a(href='/details/' + item.id) #{item.id}
                    td #{item.name}
                    td #{item.age}
                    td #{item.email}
                    td #{item.username}
                    td #{item.password}
                    td #{item.userLevel}
                    //- td #{item.answers}
                    td
                        a(href='/edit/' + item.id) Edit
                    td
                        a(href='/delete/' + item.id) Delete
                    td
                        a(href='/questions/' + item.id) Questions    
        p
        #menu
            a(href='/create') Add new person


