extends layout
block content
    h3 List of People
    table(class='gridtable')
        tr
            th Id
            th Name
            th Age
            th Email
            th Username
            th Password
            th User-Level
            each item in person
                tr
                    td
                        a(href='/details/' + item.id) #{item.id}
                    td #{item.name}
                    td #{item.age}
                    td #{item.email}
                    td #{item.username}
                    td #{item.password}
                    td #{item.userLevel}
                    //- td #{item.answers}
                    td
                        a(href='/edit/' + item.id) Edit
                    td
                        a(href='/delete/' + item.id) Delete
        p
        #menu
            a(href='/create') Add new person


